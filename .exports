export DISPLAY=:0.0

### Language ###
export LANG=en_US.UTF-8

### Compilation Flags ###
export ARCHFLAGS="-arch x86_64"

### SSH ###
export SSH_KEY_PATH="~/.ssh/rsa_id"

# SSH Editor #
if [[ -n $SSH_CONNECTION ]]; then
	export EDITOR="vim"
else
	export EDITOR="mvim"
fi

if [[ $OSTYPE == "linux-gnu" ]]; then
	export PATH="$HOME/.linuxbrew/bin:$PATH"
elif [[ $OSTYPE == "darwin" ]]; then
	# export PATH=/usr/local/bin:/usr/local/sbin:$PATH
	echo ""
fi

### Homebrew ###
if [[ `isInstalled brew` == "1" ]]; then
# Coreutils #
if [[ `brew list coreutils 2> /dev/null` ]]; then
	# PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
	echo ""
fi

# Ruby #
if [[ `brew list rbenv 2> /dev/null` ]]; then
if [[ `brew list ruby-build 2> /dev/null` ]]; then
	export PATH="$HOME/.rbenv/bin:$PATH"
	export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"
	RBENV_VER=$(rbenv install -l | egrep -v - | tail -1 | tr -d ' ')
	export GEM_HOME=$HOME/.rbenv/versions/$RBENV_VER/lib/ruby/gems/$RBENV_VER
	export GEM_PATH=$HOME/.rbenv/versions/$RBENV_VER/lib/ruby/gems/$RBENV_VER
	echo $RBENV_VER > ~/.ruby-version
	if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi
else
	# brew install ruby-build
	echo "'ruby-build' not installed."
fi # ruby-build
else
	# brew install rbenv
	echo "'rbenv' not installed."
fi # rbenv

### ZSH ###
if [[ `brew list zsh-completions 2> /dev/null` ]]; then
	fpath=(/usr/local/share/zsh-completions $fpath)
	# autoload -U compinit
	# compinit
else
	# brew install zsh-completions
	echo "'zsh-completions' not installed."
fi # zsh-completions
if [[ `brew list zsh-syntax-highlighting 2> /dev/null` ]]; then
	# source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
	echo ""
else
	# brew install zsh-syntax-highlighting
	echo "'zsh-syntax-highlighting' not installed."
	echo "(cd ~/.oh-my-zsh && git clone git://github.com/zsh-users/zsh-syntax-highlighting.git)"
fi # zsh-syntax-highlighting
else
	if [[ $OSTYPE == "linux-gnu" ]]; then
		ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Linuxbrew/install/master/install)"
		PATH="$HOME/.linuxbrew/bin:$PATH"
	elif [[ $OSTYPE == "darwin" ]]; then
		ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
	fi
fi # Homebrew

### SQLite ###
export PATH="/usr/local/opt/sqlite/bin:$PATH"

export PATH="/usr/local/opt/apr/bin:$PATH"
export PATH="/usr/local/opt/apr-util/bin:$PATH"
